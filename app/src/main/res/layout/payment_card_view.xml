<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginTop="@dimen/quarter_margin"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="@dimen/quarter_margin"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/payment_currency_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1.8dp"
                android:layout_alignBottom="@+id/payment_amount_card_view"
                android:gravity="center"
                android:text=""
                android:layout_marginEnd="@dimen/quarter_margin"

                android:textColor="@color/main_text_color"
                android:textSize="@dimen/payment_time_text_size"
                />

            <TextView
                android:id="@+id/payment_amount_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/payment_currency_card_view"
                android:gravity="center"
                android:text="Line 1"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/payment_amount_text_size" />

            <TextView
                android:id="@+id/payment_note_card_view"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="27dp"
                android:gravity="center"
                android:text="Line 1"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/payment_note_text_size" />
        </RelativeLayout>




        <TextView
            android:id="@+id/payment_time_card_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Line 1"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/payment_time_text_size" />

    </RelativeLayout>

</android.support.v7.widget.CardView>