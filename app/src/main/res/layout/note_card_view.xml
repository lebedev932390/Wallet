<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_height"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginTop="@dimen/quarter_margin"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="@dimen/quarter_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:gravity="center"
        android:paddingStart="@dimen/half_margin"
        android:paddingEnd="@dimen/half_margin">

        <TextView
            android:id="@+id/note_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/initial_setup_button_text_size" />

    </RelativeLayout>

</android.support.v7.widget.CardView>