<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.InitialSetup.CurrencyFragment">


    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/double_margin"
            android:gravity="center"
            android:text="@string/enter_currency"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/large_text_size" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_alignParentBottom="true"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pound_sterling"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_euro"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_swiss_frank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_dollar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_belarusian_ruble"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_israel_shekel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_polish_zloty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />


            <Button
                android:id="@+id/btn_krona"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_ukrainian_hryvnia"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_russian_ruble"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />

            <Button
                android:id="@+id/btn_kazakhstan_tenge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_initial_setup"
                android:textAllCaps="false"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/initial_setup_button_text_size" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>