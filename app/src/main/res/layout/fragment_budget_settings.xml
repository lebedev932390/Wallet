<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="254dp"
    tools:context=".View.Settings.BudgetSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:background="#CDCDCDCD" />

        <RelativeLayout
            android:id="@+id/layout_amount_f_s"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_n_half_button_height">

            <TextView
                android:id="@+id/text_view_currency_f_s"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/text_view_amount_f_s"
                android:gravity="center"
                android:textColor="@color/main_text_color"

                android:layout_marginEnd="@dimen/quarter_margin"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_amount_f_s"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/main_text_color"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/quarter_margin"
                android:gravity="center"
                android:textSize="36sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:background="#CDCDCDCD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />


                <Button
                    android:id="@+id/btn2_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />

                <Button
                    android:id="@+id/btn3_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="4"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />

                <Button
                    android:id="@+id/btn5_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="5"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />

                <Button
                    android:id="@+id/btn6_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="6"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="7"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />

                <Button
                    android:id="@+id/btn8_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="8"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />

                <Button
                    android:id="@+id/btn9_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="9"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_delete__f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/button_delete" />

                <Button
                    android:id="@+id/btn0_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/button_number_text_size" />

                <ImageButton
                    android:id="@+id/button_ok_f_s"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/button_ok" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>